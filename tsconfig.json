{
 "compilerOptions": {
  "target": "ES2020",
  "module": "commonjs",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "outDir": "./dist",
  "rootDir": "./src",
  "typeRoots": ["./node_modules/@types"]
},
  "include": ["src/**/*.ts"],               // Include TypeScript files from the src folder
  "exclude": ["node_modules", "dist"]       // Exclude node_modules and dist folders
}

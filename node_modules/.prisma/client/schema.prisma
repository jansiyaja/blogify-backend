generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  image     String?
  about     String?

  blogPosts BlogPost[]
}

model otp {
  id        String   @id @default(cuid())
  email     String
  otp       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt], name: "OTP_TTL")
}

model BlogPost {
  id            Int        @id @default(autoincrement())
  authorId      Int
  heading       String
  tag           String
  content       Json
  coverImageUrl String
  status        BlogStatus @default(DRAFT)
  image         String?
  about         String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Relation to User model
  author User @relation(fields: [authorId], references: [id])
}

enum BlogStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
